# AimHelper Pro - Production Environment Variables
# COPY THIS TO .env AND FILL IN REAL VALUES

# Server Configuration
NODE_ENV=production
PORT=4000
CLIENT_URL=https://aimhelper.pro

# Database Configuration - PostgreSQL for Production
DATABASE_URL=postgresql://aimhelper:YOUR_DB_PASSWORD@postgres:5432/aimhelper_pro
DATABASE_PROVIDER=postgresql

# Redis Configuration
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0

# Authentication
JWT_SECRET=YOUR_SECURE_JWT_SECRET_256_BITS_MIN
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=YOUR_SECURE_SESSION_SECRET_256_BITS_MIN
SESSION_MAX_AGE=86400000

# Email Configuration - REQUIRED FOR PASSWORD RESETS
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@aimhelper.pro

# Stripe Configuration - REQUIRED FOR PAYMENTS
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PRO_PRICE_ID=price_YOUR_PRO_MONTHLY_PRICE_ID
STRIPE_TEAM_PRICE_ID=price_YOUR_TEAM_MONTHLY_PRICE_ID

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20971520
LOG_FILE_MAX_FILES=5

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Configuration
CORS_ORIGIN=https://aimhelper.pro
TRUST_PROXY=true

# Feature Flags
ENABLE_MULTIPLAYER=true
ENABLE_AI_COACHING=false
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true

# Database Passwords (Set via Docker Compose environment)
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD